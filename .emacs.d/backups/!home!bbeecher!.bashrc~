
# Check for an interactive session
[ -z "$PS1" ] && return
if [ ! "$(pidof emacs)" ]; then
	emacs --daemon > /dev/null 2>&1 &
fi
alias ll='ls --color=auto -l'
alias ls='ls --color=auto'
#tofix - get lauchemacs from oldben
#alias emacs='~/launchemacs.sh'
eval `dircolors -b`
export EDITOR=/usr/bin/emacs

#PS1='\[\e[0;32m\]\u\[\e[m\] \[\e[1;34m\]\w\[\e[m\] \[\e[1;32m\]\$\[\e[m\]\[\e[1;37m\]'
PS1='[\u@\h \W]\$ '

export GREP_COLOR="1;33"
alias grep='grep --color=auto'
export LESS_TERMCAP_mb=$'\E[01;31m'
export LESS_TERMCAP_md=$'\E[01;31m'
export LESS_TERMCAP_me=$'\E[0m'
export LESS_TERMCAP_se=$'\E[0m'
export LESS_TERMCAP_so=$'\E[01;44;33m'
export LESS_TERMCAP_ue=$'\E[0m'
export LESS_TERMCAP_us=$'\E[01;32m'
set show-all-if-ambiguous on

if [ -f /etc/bash_completion ]; then
    . /etc/bash_completion
fi

function clean_hg {
    mydir=$(pwd)
    while [ ! \( -e .hg \) ]; do
        cd ..
    done
    hg status | cut -d " " -f 2 | xargs rm
    cd $mydir
}
PROMPT_COMMAND="history -a"
source /usr/bin/virtualenvwrapper.sh

set PYMACS_PYTHON=python2.7
export PYMACS_PYTHON=python2.7

#clojure stuff
export CLOJURE_EXT=~/.clojure:/usr/lib/jline/
export CLOJURE_OPTS="-Xdebug -Xrunjdwp:transport=dt_socket,server=y,suspend=n"
export PATH=$PATH:~/opt/clojure-contrib/launchers/bash
alias clj="rlwrap clj-env-dir"
export PATH=$PATH:~/opt/leiningen
export CLASSPATH=$CLASSPATH:~/.clojure
